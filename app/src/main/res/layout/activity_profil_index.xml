<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Profil Saya"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/namalengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:lines="1"
                    android:layout_marginBottom="3sp"
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/nomor_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="3sp"
                    android:lines="1"
                    android:textSize="15sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:lines="1"
                    android:textSize="15sp"
                    android:fontFamily="monospace" />


            </LinearLayout>

            <View
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/listProfil">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="85"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="UPDATE PROFIL"
                        android:fontFamily="monospace"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_navigate_next_black_24dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="notifikasi"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/listPassword">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="85"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:text="UBAH PASSWORD"
                        android:fontFamily="monospace"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_navigate_next_black_24dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="notifikasi"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/listTentang">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="85"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="TENTANG APLIKASI"
                        android:textColor="@color/black"
                        android:fontFamily="monospace"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_navigate_next_black_24dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="notifikasi"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/listKeluar">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="85"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="KELUAR"
                        android:textColor="@color/black"
                        android:fontFamily="monospace"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_navigate_next_black_24dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="notifikasi"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>